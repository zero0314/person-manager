        <result property="lianxifangshi" column="lianxifangshi"/>
        <result property="youxiang" column="youxiang"/>
        <result property="zhaopindiqu" column="zhaopindiqu"/>
        <result property="zhaopinzhuanye" column="zhaopinzhuanye"/>
        <result property="zhaopinfengmian" column="zhaopinfengmian"/>
        <result property="zhaopinzhiwei" column="zhaopinzhiwei"/>
